[user]
	name = Jayesh Patel
	email = jayesh.patel@sage.com

[alias]
	st = status
    br = branch
    co = checkout
# list all aliases
	alias = !git config -l | grep alias | cut -c 7-
    common = merge-base
	root = rev-parse --show-toplevel

[diff]
	tool = vscode
[merge]
	tool = vscode
[mergetool]
	keepBackup = false

[difftool "vscode"]
    cmd = code --wait --diff "$LOCAL" "$REMOTE"
[mergetool "vscode"]
	cmd = code --wait "$MERGED"

[color]
[color "interactive"]
	prompt = yellow

[color "diff"]
    meta = yellow bold
    old = red bold
    new = green bold
    frag = magenta bold
    whitespace = white bold reverse

[color "branch"]
    current = yellow reverse
    local = yellow
	remote = green

[pager]
    diff = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	excludesfile = /Users/jayesh.patel/.gitignore_global

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[difftool "bbdiff"]
	cmd = bbdiff --wait --resume "$LOCAL" "$REMOTE"
	prompt = false
[mergetool "bbdiff"]
	cmd = bbdiff --wait --resume "$LOCAL" "$REMOTE"
