[alias]
	st = status
    br = branch
    co = checkout
# list all aliases
	alias = !git config -l | grep alias | cut -c 7-
    common = merge-base
	root = rev-parse --show-toplevel

[diff]
	tool = vscode
[merge]
	tool = vscode
[mergetool]
	keepBackup = false

[color]
[color "interactive"]
	prompt = yellow

[color "diff"]
    meta = yellow bold
    old = red bold
    new = green bold
    frag = magenta bold
    whitespace = white bold reverse

[color "branch"]
    current = yellow reverse
    local = yellow
	remote = green

    [pager]
	diff = false


[difftool "vscode"]
    cmd = 'code' --wait --diff "$LOCAL" "$REMOTE"
[mergetool "vscode"]
    cmd = 'code' --wait "$MERGED"
